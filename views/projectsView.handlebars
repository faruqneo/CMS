{{#if errors}}
<div class="alert alert-warning alert-dismissible">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Warning!</strong> {{errors}}
</div>
{{/if}}

<h2>Edit Project </h2>   
<form action="/cms/dashboard/update/project/{{project.id}}" method="POST">
    <div class="form-group">
        <label for="project">Project Name:</label>
        <input type="text" class="form-control" name="project" value="{{project.name}}">
    </div>
    <div class="form-group">
    <label for="branch">Branch:</label>
    <input type="text" class="form-control" name="branch" value="{{project.branch}}">
  </div>
    <div class="form-group">
    <label for="bitbucket_link">Bitbucket_link:</label>
    <input type="text" class="form-control" name="bitbucket_link" value="{{project.bitbucket_link}}">
  </div>
       <div class="form-group">
    <label for="client_name">Client Name:</label>
    <input type="text" class="form-control" name="client_name" value="{{project.client_name}}">
  </div>
  <div class="form-group">
    <label for="manager">Account Manager:</label>
    <input type="text" class="form-control" name="manager" value="{{project.manager}}">
  </div>
  <div class="form-group">
    <label for="role">Role:</label>
    <select class="custom-select" id="exist1">
        <option value={{#objToRole project.roles}}{{/objToRole}}>{{#objToRole project.roles}}{{/objToRole}}</option>
    </select>
    <select class="custom-select" name="role" id="new1" style="display: none;">
    {{#each role}}
      <option value={{id}}>{{title}}</option>
    {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="member">Member:</label>
    <select class="custom-select" id="exist">
        <option value={{#objToMember project.members}}{{/objToMember}}>{{#objToMember project.members}}{{/objToMember}}</option>
    </select>
    <select class="custom-select" name="member" id="new" style="display: none;">
    {{#each member}}
      <option value={{id}}>{{name}}</option>
    {{/each}}
    </select>
  </div>
    <div class="form-group">
    <label for="domains">Respective Domains:</label>
    <input type="text" class="form-control" name="domains" value="{{project.domains}}">
  </div>
      <div class="form-group">
    <label for="ec2">EC2 SSH Url:</label>
    <input type="text" class="form-control" name="ec2" value="{{project.ec2}}">
  </div>
    <div class="form-group">
    <label for="pem">EC2 Pem File Name:</label>
    <input type="text" class="form-control" name="pem" value="{{project.pem}}">
  </div>


  <button type="submit" class="btn btn-primary">submit</button>
  <a href="/cms/dashboard/credentials/list"><button type="button" class="btn btn-default">back</button></a>
</form>


<script>
$(document).ready(function(){
  $('#exist').focus(function(){
    $('#new').show();
    $('#exist').remove();
  });

  $('#exist1').focus(function(){
    $('#new1').show();
    $('#exist1').remove();
  });
});

</script>