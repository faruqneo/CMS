      <h2>Passwords <a href="/cms/dashboard/password/add"><i class="fas fa-plus-circle"></i></a></h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Website</th>
              <th>Login Url</th>
              <th>Roles</th>
              <th>Username</th>
              <th>Password</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="myTable">
            {{#each password}}
              <tr>
              <td>{{math @index "+" 1}}</td>
              <td><a href="https://{{website}}">{{website}}</a></td>
              <td><a href="https://{{login}}">{{login}}</a></td>
              <td>{{role}}</td>
              <td>{{username}}</td>
              <td>{{password}}</td>
              <td><a href="/cms/dashboard/password/edit/{{id}}"><button type="button" class="btn btn-primary">Edit</button></a>
              <a href="/cms/dashboard/password/delete/{{id}}"><button type="button" class="btn btn-danger">Delete</button></a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>