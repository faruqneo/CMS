      <h2>Passwords <a href="/cms/dashboard/password/add"><i class="fas fa-plus-circle"></i></a></h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Website</th>
              <th>Login Url</th>
              <th>Roles</th>
              <th>Username</th>
              <th>Password</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody id="myTable">
            {{#each password}}
              <tr>
              <td>{{math @index "+" 1}}</td>
              <td>{{website}}</td>
              <td><a href="https://{{login}}" target="_blank">{{login}}</a></td>
              <td>{{role}}</td>
              <td>{{username}}</td>
              <td>{{password}}</td>
              <td><a href="/cms/dashboard/password/edit/{{id}}" class="text-success"><i class="fas fa-edit"></i></a></td>
              <td><a href="/cms/dashboard/password/delete/{{id}}" class="text-danger"><i class="fas fa-trash-alt"></i></a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>