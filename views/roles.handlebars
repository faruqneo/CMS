  
      
     <h2>Roles <a href="/cms/dashboard/roles/add"><i class="fas fa-plus-circle"></i></a></h2>        
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Description</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody id="myTable">
              {{#each roles}}
              <tr>
              <td>{{math @index "+" 1}}</td>
              <td>{{title}}</td>
              <td>{{description}}</td>
              <td><a href="/cms/dashboard/roles/edit/{{id}}" class="text-success"><i class="fas fa-edit"></i></a></td>
              <td><a href="/cms/dashboard/roles/delete/{{id}}" class="text-danger"><i class="fas fa-trash-alt"></i></a></td>
              </tr>
              {{/each}}
          </tbody>
        </table>
      </div>
