{{#if errors}}
    {{#each errors}}
        <div class="alert alert-warning">
        <strong>Warning!</strong> {{msg}}.
        </div>
    {{/each}}
{{/if}}

{{#if success}}
        <div class="alert alert-warning">
        <strong>Warning!</strong> {{success}}.
        </div>
{{/if}}
