{{#if errors}}
    {{#each errors}}
        <div class="alert alert-warning">
        <strong>Warning!</strong> {{msg}}.
        </div>
    {{/each}}
{{/if}}
<br>
<h2>Update Roles</h2>   
<form action="/cms/dashboard/update/roles/{{roles.id}}" method="POST">
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" name="title" value="{{roles.title}}">
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" rows="5" name="description" style="resize: none;" value="{{roles.description}}">{{roles.description}}</textarea>
    </div>
  <button type="submit" class="btn btn-primary">submit</button>
  <a href="/cms/dashboard/roles"><button type="button" class="btn btn-default">back</button></a>
</form>